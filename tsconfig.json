{
  "compilerOptions": {
    "lib": ["es5", "es6"],
    "target": "es5",
    "baseUrl": "./src",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "paths": {
      "@controller/*": ["controller/*"],
      "@init": ["init/index"],
      "@init/*": ["init/*"],
      "@redis": ["redis"]
    }
  },
  "include": ["./src"]
}
